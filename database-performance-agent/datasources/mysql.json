{
  "name": "MySQL Database",
  "type": "mysql",
  "connection": {
    "host": "${MYSQL_HOST}",
    "port": "${MYSQL_PORT}",
    "database": "${MYSQL_DATABASE}",
    "username": "${MYSQL_USERNAME}",
    "password": "${MYSQL_PASSWORD}"
  },
  "configuration": {
    "query_timeout": "30s",
    "performance_schema_enabled": true,
    "slow_query_log_enabled": true
  }
}